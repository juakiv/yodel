generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String @db.VarChar(655)

  points Int @default(0)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  sessions Session[]
  post     Post[]
  votes    Vote[]
}

model Session {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  token String @unique

  createdAt DateTime @default(now())
  expiresAt DateTime

  @@index([userId])
}

model Post {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  content String    @db.VarChar(1000)
  color   PostColor @default(GREEN)

  parent       Post? @relation("commentParent", fields: [parentPostId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  parentPostId Int?
  commentTag   Int?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  votes      Vote[]
  votesCount Int    @default(0)
  comment    Post[] @relation("commentParent")

  @@index([userId])
  @@index([parentPostId])
}

model Vote {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  post   Post @relation(fields: [postId], references: [id])
  postId Int

  type VoteType @default(UP)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@unique([userId, postId])
  @@index([userId])
  @@index([postId])
}

enum VoteType {
  UP
  DOWN
}

enum PostColor {
  YELLOW
  RED
  LILAC
  AQUA
  GREEN
}
